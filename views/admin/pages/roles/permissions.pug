extends ../../layouts/default.pug 
include ../../mixins/alert.pug
block main 
 +alert-success(5000)

 h1(class="mb-4") Phân quyền
 if(records)
  div(class="text-right")
   button(
     class="btn btn-primary mb-3"
     type="submit"
     button-submit
   ) Cập nhật
  table(
    table-permissions
    class="table table-hover table-sm"
  )
   thead
    tr
     th Tính năng
     each item in records 
      th(class="text-center") #{item.title}
   
   tbody
    tr(data-name="id" class="d-none")
     td 
     each item in records 
      td(class="text-center")
       input(type="text" value=item.id) 
    tr
     td(col-span="4")
      b Danh mục sản phẩm 
    tr(data-name="products-category_view")
     td Xem   
     each item in records 
      td(class="text-center")
       input(type="checkbox") 
    tr(data-name="products-category_create")  
     td Thêm mới
     each item in records  
      td(class="text-center")
       input(type="checkbox")
    
    tr(data-name="products-category_edit")  
     td Chỉnh sửa 
     each item in records 
      td(class="text-center")
       input(type="checkbox")
    
    tr(data-name="products-category_delete")  
     td Xóa 
     
     each item in records
      td(class="text-center")
       input(type="checkbox") 

  form(
    action=`${prefixAdmin}/roles/permissions?_method=PATCH`
    id="form-change-permissions"
    method="POST"
    class="d-none"
    
  ) 
   div(class="form-group") 
     input(
      type="text"
      class="form-control"
      name="permissions"
      
     )      
  script(src="/admin/js/roles.js")      