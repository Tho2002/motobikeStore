extends ../../layouts/default.pug 

block main 

 h1(class="mb-4") Thêm mớinhóm quyến
 form(
    action=`${prefixAdmin}/roles/create`
    method="POST"
   
 ) 
  div(class="form-group")
   label(for="title") Tiêu Đề
   input(
    type="text"
    class="form-control"
    id="title"
    name="title"
    required
   )
  div(class="form-group")
  label(for="desc") Mô tả
  textarea(
   type="text"
   class="form-control"
   id="desc"
   name="description"
   row="5"
  ) 
  div(class="form-group")
   button(
    type="submit"
    class="btn btn-primary"
   ) Tạo mới
 