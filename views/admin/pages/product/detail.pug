extends ../../layouts/default.pug 
block main
 h1 Thông tin chi tiết sản phẩm  
  div(class="detail-motobike")
   if (listbike.title)
    h1(class="mb-4") Tên sản phẩm: #{listbike.title}
   if (listbike.price)
     div(class="mb-4") Giá: <b> #{listbike.price}$</b>
   if (listbike.discountPercentage)
     div(class="mb-4") Giảm Giá: <b> #{listbike.discountPercentage}%</b>
   if (listbike.stock)
     div(class="mb-4") Còn Lại: <b> #{listbike.stock}</b>    
   if (listbike.thumbnail)
     div(class="mb-4")
      img(
         src=listbike.thumbnail 
         style="width:100px"
      )
   if (listbike.status)
    div(class="mb-4")
     span Trạng thái: 
     if (listbike.status === "active")
      span(class="bade bade-success") Hoạt động
     else 
      span(class="bade bade-danger") Đưng hoạt động
   if (listbike.position)   
    div(class="mb-4") Vị trí #{listbike.position}
   if (listbike.description) 
      div(class="mb-4")  !{listbike.description}
      a(
       class="btn btn-warning btn-sm"
       href=`${prefixAdmin}/products/edit/${listbike.id}`
      ) Chỉnh sửa  
   
  
     
   script(src="/admin/js/product.js")